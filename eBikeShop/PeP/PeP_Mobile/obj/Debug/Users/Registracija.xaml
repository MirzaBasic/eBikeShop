<Page
    x:Class="PeP_Mobile.Users.Registracija"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PeP_Mobile.Users"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

      
        <StackPanel Margin="30">
        <TextBlock Text="REGISTRACIJA" HorizontalAlignment="Center"  FontSize="35"></TextBlock>
       
       <TextBox  Header="Korisničko ime" Name="korisnickoImeInput" PlaceholderText="Korisničko ime" ></TextBox>
            <TextBox Header="Ime"  Name="imeInput" PlaceholderText="Ime" ></TextBox>
            <TextBox Header="Prezime"  Name="prezimeInput" PlaceholderText="Prezime" ></TextBox>
            <TextBox Header="Email"  Name="emailInput" PlaceholderText="Email" InputScope="EmailSmtpAddress"></TextBox>

            <PasswordBox Header="Lozinka"  Name="lozinkaInput" PlaceholderText="Lozinka"/>
            <PasswordBox Header="Lozinka ponovo"  Name="lozinkaPonovoInput" PlaceholderText="Lozinka ponovo"/>

        <Button x:ConnectionId='1' Name="btnSignup" Content="Sign-up" Grid.Row="7" Margin="10"   FontSize="30" HorizontalAlignment="Center"                         />
        </StackPanel>
    </Grid>
</Page>

